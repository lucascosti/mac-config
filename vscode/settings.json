{
  "window.commandCenter": true,
  "editor.fontFamily": "DejaVuSansMono Nerd Font Mono",
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "markdown.preview.fontFamily": "\"Helvetica Neue\", Helvetica, \"Segoe UI\", Arial, freesans, sans-serif",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "editor.accessibilitySupport": "off",
  "editor.renderWhitespace": "boundary",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.mouseWheelZoom": true,
  "editor.inlineSuggest.enabled": true,
  "search.mode": "newEditor",
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.rulers": [
    80
  ],
  "editor.selectionHighlight": false,
  "editor.renderLineHighlight": "all",
  "workbench.editor.restoreViewState": false,
  "window.openFoldersInNewWindow": "on",
  "window.confirmBeforeClose": "keyboardOnly",
  "editor.occurrencesHighlight": false,
  "editor.wordWrap": "bounded",
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
  },
  "explorer.confirmDragAndDrop": false,
  "search.exclude": {
    "**/translations": true
  },
  "search.searchEditor.reusePriorSearchConfiguration": true,
  "search.searchEditor.defaultNumberOfContextLines": 1,
  // Set the git commit editor validation lengths to match Atom (72 for description, no limit on other lines)
  "git.inputValidationSubjectLength": 72,
  "git.inputValidationLength": 1000,
  "git.enableStatusBarSync": false,
  "git.autofetch": true,
  "git.autofetchPeriod": 900, // 15 minutes
  "scm.diffDecorationsGutterPattern": {
    "modified": false,
    "added": false,
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "problems.decorations.enabled": false,
  "workbench.iconTheme": "file-icons",
  "workbench.colorTheme": "One Dark Pro",
  "oneDarkPro.markdownStyle": false,
  // Setting for https://github.com/microsoft/vscode/issues/146168
  "terminal.integrated.minimumContrastRatio": 1,
  // These color customisations are for the "One Dark Pro" theme.
  "workbench.colorCustomizations": {
    // This makes linter warnings/errors transparent in the minimap
    "minimap.errorHighlight": "#00000000",
    "minimap.warningHighlight": "#00000000",
    // Don't show problems (warnings,infos, errors) in the scrollbar
    "editorOverviewRuler.errorForeground": "#00000000",
    "editorOverviewRuler.warningForeground": "#00000000",
    "editorOverviewRuler.infoForeground": "#00000000",
    // make the text in File Explorer the same color as Atom's
    "sideBar.foreground": "#9da5b4",
    // To change the folder icon color to be the same color:
      // open the Icon extension file at: ~/.vscode/extensions/file-icons.file-icons-<version>/icons/file-icons-icon-theme.json
      // find the following segment:
      // ```
      // "iconDefinitions": {
      //     "_folder": {
      //         "fontCharacter": "\\f016",
      // ```
      // change the "fontColor" to "#9da5b4"
    // Make the modified color orange instead of teal!
    "editorOverviewRuler.modifiedForeground": "#b6944f",
    "editorGutter.modifiedBackground": "#b6944f",
    "minimapGutter.modifiedBackground": "#b6944f",
    // Make the new line color a better green.
    "editorOverviewRuler.addedForeground": "#28744e",
    "editorGutter.addedBackground": "#28744e",
    "minimapGutter.addedBackground": "#28744e",
    // Similar color changes for diff editor backgrounds
    "diffEditor.removedTextBackground": "#940c0cac",
    "diffEditor.insertedTextBackground": "#256a47",
    "diffEditor.insertedLineBackground": "#28744e82",
    // Change the search highlight in minimap to a yellow (instead of orange)
    "minimap.findMatchHighlight": "#b3b154",
    "editorOverviewRuler.findMatchForeground": "#b3b154",
    // Change the focus area border color to be blue, like Atom's
    "focusBorder" : "#568af2",
    // Add a colored border to the top of the active tab
    "tab.activeBorderTop" : "#568af2",
    // Transparent (nothing) for the bottom border of the active tab
    "tab.activeBorder": "#00000000",
    // Bookmark extension colors
    "bookmarks.lineBackground": "#0071fc50",
    "bookmarks.overviewRuler": "#0070f8",
    // Highlight notifications with a border
    "notificationToast.border": "#568af2",
    // Make the terminal colors match my iTerm2 color scheme
    "terminal.background": "#282c34",
    "terminal.foreground": "#c7c7c7",
    "terminalCursor.background": "#ffffff",
    "terminalCursor.foreground": "#c7c7c7",
    "terminal.ansiBlack": "#2e3436",
    "terminal.ansiBlue": "#3465a4",
    "terminal.ansiBrightBlack": "#555753",
    "terminal.ansiBrightBlue": "#729fcf",
    "terminal.ansiBrightCyan": "#34e2e2",
    "terminal.ansiBrightGreen": "#8ae234",
    "terminal.ansiBrightMagenta": "#ad7fa8",
    "terminal.ansiBrightRed": "#ef2929",
    "terminal.ansiBrightWhite": "#eeeeec",
    "terminal.ansiBrightYellow": "#fce94f",
    "terminal.ansiCyan": "#06979a",
    "terminal.ansiGreen": "#4e9a06",
    "terminal.ansiMagenta": "#75507b",
    "terminal.ansiRed": "#cc0000",
    "terminal.ansiWhite": "#d3d7cf",
    "terminal.ansiYellow": "#c4a000"
  },
  "editor.tokenColorCustomizations": {
    "[One Dark Pro]": {
      // Override the theme comment color to make it a tad darker (same as Atom's One Dark)
      "comments": "#5c6370",
      "textMateRules": [
        {
          // Change the link color to match Atom's One Dark
          "scope": ["markup.underline.link.markdown"],
          "settings": {
            "foreground": "#56b6c2"
          }
        },
        {
          // Remove formatting on punctuation to match Atom's One Dark
          "scope": [
            "punctuation.definition.metadata.markdown",
            "punctuation.definition.string.end.markdown",
            "punctuation.definition.string.begin.markdown"
          ],
          "settings": {
            "foreground": "#abb2bf"
          }
        },
        {
          // Lighten up the block quote color a tad
          "scope": ["markup.quote.markdown"],
          "settings": {
            "foreground": "#777e8b"
          }
        },
      ]
    }
  },
  // Mainly for Codespaces, make sure the default terminal is ZSH:
  "terminal.integrated.defaultProfile.linux": "zsh",
  // Extension settings should go below here
  "cSpell.language": "en,en-US",
  "cSpell.diagnosticLevel": "Error",
  "cSpell.showCommandsInEditorContextMenu": false,
  "cSpell.dictionaries": [
    "en-US"
  ],
  "cSpell.userWords": [
    "Algolia",
    "automations",
    "AUTOTITLE",
    "Bazel",
    "canva",
    "Canva's",
    "cheatsheets",
    "codespace",
    "codespaces",
    "Costi",
    "datacenter",
    "Dependabot",
    "devops",
    "dotfiles",
    "entrypoint",
    "frontmatter",
    "ghae",
    "ghec",
    "ghes",
    "hardcoded",
    "hotpatch",
    "ifversion",
    "Janky",
    "Karabiner",
    "keychain",
    "kilobranch",
    "Kubernetes",
    "megabranch",
    "octo",
    "openapi",
    "orgs",
    "permalinks",
    "postgres",
    "Powerlevel",
    "prodname",
    "Protogen",
    "quickstart",
    "repos",
    "reusables",
    "scim",
    "screencasts",
    "scrollbar",
    "submodules",
    "symlinked",
    "templated",
    "Unprocessable",
    "webhook",
    "Webhooks",
    "workspace's",
    "zshscripts"
  ],
  "cSpell.enableFiletypes": [
    "asciidoc",
    "c",
    "csharp",
    "css",
    "git-commit",
    "go",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pug",
    "python",
    "restructuredtext",
    "rust",
    "scala",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yaml",
    "yml"
  ],
  "markdownlint.config": {
    "MD004": false,
    "MD024": false,
    "MD034": false,
    "MD037": false,
    "MD040": false,
    "MD041": false,
  },
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.blame.format": "${id}  ${date}  ${author|10}",
  "gitlens.blame.dateFormat": "YYYY-MM-DD",
  "gitlens.defaultTimeFormat": "HH:mm",
  "gitlens.statusBar.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.views.commits.showBranchComparison": false,
  "gitlens.views.fileHistory.avatars": false,
  "gitlens.views.lineHistory.avatars": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.annotations.changes": false,
  "gitlens.defaultDateShortFormat": "YYYY-MM-DD",
  "gitlens.defaultDateFormat": "DD MMM YYYY",
  "gitlens.keymap": "none",
  "gitlens.views.repositories.avatars": false,
  "gitlens.menus": {
    "editor": false,
    "editorGroup": false,
    "editorTab": false,
    "explorer": false,
    "scm": {
      "authors": true
    },
    "scmGroupInline": false,
    "scmGroup": false,
    "scmItem": false
  },
  "ActiveFileInStatusBar.fullpath": false,
  "markdownShortcuts.icons.italic": false,
  "markdownShortcuts.icons.bullets": false,
  "markdownShortcuts.icons.bold": false,
  "markdownShortcuts.icons.strikethrough": false,
  "todohighlight.include": [

    "**/*.md",
    "**/*.txt",
    "**/*.zsh",
    "**/*.sh",
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss"
  ],
  "todohighlight.keywords": [
    "TODO",
    "FIXME",
    "REPLACE",
    "FOLLOWUP",
    "TODOCS"
  ],
  "todohighlight.defaultStyle": {
    "backgroundColor": "#F06292",
    "color": "white"
  },
  "eslint.format.enable": true,
  "redhat.telemetry.enabled": false,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true,
    "javascript": true
  },
  "markdown-preview-github-styles.colorTheme": "system",
  "security.workspace.trust.untrustedFiles": "open",
  "vale.readabilityProblemLocation": "both",
  "vale.valeCLI.config": "/Users/lucascosti/repos/docs/eng-curriculum/vale/.vale.ini",
  "vale.doNotShowWarningForFileToBeSavedBeforeLinting": true,
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "[applescript]": {
    "files.encoding": "utf8"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.acceptSuggestionOnEnter": "off"
}
